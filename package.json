{
  "name": "hardhat-template",
  "version": "0.1.0",
  "description": "Template for writing, compiling, testing, and deploying Solidity smart contracts",
  "scripts": {
    "clean": "rimraf ./cache && rimraf ./artifacts",
    "compile": "yarn clean && hardhat compile",
    "coverage": "yarn compile && hardhat coverage --solcoverjs ./.solcover.js --temp artifacts",
    "deploy": "hardhat run scripts/deploy.ts",
    "prettier": "prettier --write 'contracts/**/*.sol'",
    "test": "hardhat test test/*.ts",
    "test-fast": "TS_NODE_TRANSPILE_ONLY=1 hardhat test test/*.ts",
    "typechain": "hardhat typechain"
  },
  "author": "David Josephs",
  "license": "MIT",
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.1",
    "@nomiclabs/hardhat-etherscan": "^2.1.2",
    "@nomiclabs/hardhat-waffle": "^2.0.0",
    "@openzeppelin/contracts": "^4.1.0",
    "@typechain/ethers-v5": "^7.0.0",
    "@typechain/hardhat": "^2.0.1",
    "@types/chai": "^4.2.18",
    "@types/mocha": "^8.2.2",
    "@types/node": "^15.6.1",
    "chai": "^4.3.4",
    "dotenv": "^10.0.0",
    "ethereum-waffle": "^3.2.1",
    "ethers": "^5.2.0",
    "hardhat": "^2.3.0",
    "hardhat-gas-reporter": "^1.0.4",
    "prettier": "^2.3.0",
    "prettier-plugin-solidity": "^1.0.0-beta.11",
    "solidity-coverage": "^0.7.13",
    "ts-generator": "^0.1.1",
    "ts-node": "^10.0.0",
    "typechain": "^5.0.0",
    "typescript": "^4.3.2"
  }
}
